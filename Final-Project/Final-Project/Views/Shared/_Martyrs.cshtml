@model List<UnudulmazlarCard>


@foreach (var item in Model)
{
    <li style="text-align: center;list-style: none;background-color: black;">
        <a asp-controller="unudulmazlar" asp-action="detail" asp-route-id="@item.Id" style="color:whitesmoke;">
            <img style="width:100px !important; height:100px;" src="~/img/Qəhrəmanlar/@item.Image"> @item.Name @item.Surname @item.Birthday
        </a>
    </li>
}
