@model AccountVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/login/login.css">
    <link rel="stylesheet" href="~/css/home/style.css">
</head>

<body>



    <main>
        <div class="container my-5">
            <!-- HTML !-->
            <button class="button-64" role="button"><a asp-controller="Home" asp-action="Index" class="text">Əsas səhifəyə qayıt</a></button>

            <div class="text-danger mb-2" asp-validation-summary="All"></div>
         <h2>Forgot Password</h2>
                        <form method="post">

                            <div class="form-group">
                                <label asp-for="@Model.AppUser.Email">Email</label>
                                <input asp-for="@Model.AppUser.Email" class="form-control" placeholder="Email">
                                <span class="text text-danger" asp-validation-for="AppUser.Email"></span>

                            </div>

                            <p class="description"> Don't have an account? <a asp-controller="account" asp-action="register" class="text-primary">Register</a></p>
                            <p class="description"> Reset Password? <a asp-controller="account" asp-action="forgotPassword" class="text-primary">ResetPassword</a></p>

                            <button type="submit">Login</button>
                        </form>
        </div>
    </main>



    <script src="~/js/script.js"></script>
    <script src="~/js/login.js"></script>
</body>

</html>
