@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/login/login.css">
    <link rel="stylesheet" href="~/css/home/style.css">
</head>

<body>

    @if (TempData["Fail"] != null)
    {
        <div class="alert alert-danger" id="failAlert" role="alert">
            @TempData["Fail"]
        </div>
    }

    <main>
        <div class="container my-5">
            <!-- HTML !-->
            <button class="button-64" role="button"><a asp-controller="Home" asp-action="Index" class="text">Əsas səhifəyə qayıt</a></button>

            <div class="text-danger mb-2" asp-validation-summary="All"></div>
            <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data">
                <div class="form-item">
                    <label asp-for="Email">Email</label>
                    <div class="input-wrapper">
                        <input asp-for="Email" placeholder="Enter your Email" autocomplete="off" required />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-item">
                    <label>Password</label>
                    <div class="input-wrapper">
                        <input id="password" type="password" placeholder="Enter your Password" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <button type="button" id="eyeball">
                            <div class="eye"></div>
                        </button>
                        <div id="beam"></div>
                    </div>
                </div>
                <div class="forgot-password">
                    <span >
                        <a asp-controller="Account" asp-action="forgotpassword"> Şifrənizi unutmusunuz ?</a>
                    </span>
                </div>
                <button class="button-646" id="submit">Sign in</button>
                
            </form>
        </div>
    </main>



    <script src="~/js/script.js"></script>
    <script src="~/js/login.js"></script>

    <script>


        let alertDiv = document.getElementById("failAlert");
        setTimeout(function () {
            alertDiv.remove()
        }, 3000)

    </script>

</body>

</html>
